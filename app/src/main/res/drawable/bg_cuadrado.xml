<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo gris sÃ³lido -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#383737" />
            <stroke android:color="@color/toolbar" android:width="1dp" />
        </shape>
    </item>
    <!-- Degradado en grises de abajo hacia arriba -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#888888"
                android:centerColor="#444444"
                android:endColor="#222222"
                android:type="linear"
                android:angle="90"
                />

        </shape>
    </item>
</layer-list>
